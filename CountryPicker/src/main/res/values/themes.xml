<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardStyle">

        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="android:backgroundTint">@color/card_bg_color</item>

    </style>

    <style name="actionBarItemBackground">
        <item name="android:theme">@style/actionBarSelectableItemTheme</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="actionBarSelectableItemTheme">
        <item name="colorControlHighlight">@color/rippleColor</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>